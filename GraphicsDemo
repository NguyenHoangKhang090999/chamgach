                    }   
                }
                xet++;
            }
       
        }
        
        public void muiten3(Graphics2D g2d,int q1,int q2,int q3,int q4){
          
            int dx,dy;
            int xet=1;
            float Xinc,Yinc,x,y,steps;
            int h = 30;
            int a = 15;
            
            
            // ve canh tren 
            q1 = q1 - h;
            q2 = q2 - a;
            q3 = q3 - h;
            q4 = q4 + a;
                    
            dy=q4-q2;
            dx=q3-q1;
            
            if(dy>dx){
                steps=Math.abs(dy);
            }
            else{
                steps=Math.abs(dx);
            }
            x = q1;
            y = q2;
            Yinc=dy/steps;
            Xinc=dx/steps;
            
            while(steps!=0){
                if(xet %2 != 0){
                    //net gach
