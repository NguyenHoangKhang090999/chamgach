                    steps--;
                    x=x+Xinc;
                    y=y+Yinc;
                    g2d.setColor(Color.BLUE);
                    g2d.fillOval(Math.round(x), Math.round(y), 5, 5);
                    }   
                }
                xet++;
           }
        
        }
        
